# Copy this file to .env and set these values in your deployment (e.g., Vercel Environment Variables)
# Used by the password-protected editor at /api/editor

# Password required to submit changes in the web editor
EDITOR_PASSWORD=change-me

# GitHub settings used by the editor to commit LungWai/projects.json
# Personal Access Token with repo scope (at minimum: contents:write)
GITHUB_TOKEN=ghp_your_personal_access_token_here
# Repository in the form owner/repo
GITHUB_REPO=YOUR_GITHUB_USERNAME/YOUR_REPOSITORY
# Branch to commit to
GITHUB_BRANCH=main

# Flask secret for session/flash messages (any random string)
FLASK_SECRET_KEY=replace-with-random-string

# Neon database (optional; if unset, sync_neon_db.py writes LungWai/db_products.json)
NEON_DATABASE_URL=postgresql://user:password@host/db?sslmode=require
NEON_TABLE=products

# Vercel (Actions-driven deployments)
# Token from `vercel login`; keep secret in GitHub -> Settings -> Secrets and variables -> Actions
VERCEL_TOKEN=vercel_token_here
# Organization / Project IDs from `vercel link` or dashboard
VERCEL_ORG_ID=org_id_here
VERCEL_PROJECT_ID=project_id_here
# Optional team scoping
VERCEL_TEAM_ID=
VERCEL_TEAM_SLUG=

# Pruning workflow
# Number of READY deployments to keep for each target (production/preview)
VERCEL_KEEP=5 